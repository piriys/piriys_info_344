@model IEnumerable<ViewSparkProject.Slide>

@{
    Layout = "~/Views/Shared/_FullScreen.cshtml";
    ViewBag.Title = "Index";
}

<h2>Slides</h2>

<p>
    @Html.VSLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Content
        </th>
        <th>
            CreationDate
        </th>
        <th>
            CreatedByUser
        </th>
        <th>
            ModificationDate
        </th>
        <th>
            ModifiedByUser
        </th>
        <th>
            PresentationDate
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedByUser.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModificationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedByUser.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PresentationDate)
        </td>
        <td>
            @Html.VSLink("Edit", "Edit", new { id = item.ID }) |
            @Html.VSLink("Details", "Details", new { id = item.ID }) |
            @Html.VSLink("Delete", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
