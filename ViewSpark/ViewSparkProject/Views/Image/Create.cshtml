@model ViewSparkProject.Image

@{
    Layout = "~/Views/Shared/_FullScreen.cshtml";
    ViewBag.Title = "Create";
}

<h2>Create Image</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Image", FormMethod.Post, new { enctype = "multipart/form-data"}) ) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Image</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title)
        </div>

        <div class="editor-label">
            Image File
        </div>
        <div class="editor-field">
            <input type="file" name="imageFile"  id="imageFile" />
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CreatedBy, "CreatedByUser")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CreatedBy", String.Empty)
            @Html.ValidationMessageFor(model => model.CreatedBy)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ModifiedBy, "ModifiedByUser")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ModifiedBy", String.Empty)
            @Html.ValidationMessageFor(model => model.ModifiedBy)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.VSLink("Back to List", "Index")
</div>
