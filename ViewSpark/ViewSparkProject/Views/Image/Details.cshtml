@model ViewSparkProject.Image

@{
    Layout = "~/Views/Shared/_FullScreen.cshtml";
    ViewBag.Title = "Details";
}

<h2>Image Details</h2>

<img src="@Url.Action("View", new { id = Model.ID })" />

<fieldset>
    <legend>Image</legend>

    <div class="display-label">Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>

    <div class="display-label">Url</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Url)
    </div>

    <div class="display-label">CreationDate</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreationDate)
    </div>

    <div class="display-label">CreatedByUser</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CreatedByUser.Username)
    </div>

    <div class="display-label">ModificationDate</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ModificationDate)
    </div>

    <div class="display-label">ModifiedByUser</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ModifiedByUser.Username)
    </div>

    <div class="display-label">MimeType</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.MimeType)
    </div>
</fieldset>
<p>
    @Html.VSLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.VSLink("Back to List", "Index")
</p>
