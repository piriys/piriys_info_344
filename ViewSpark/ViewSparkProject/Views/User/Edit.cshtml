            @Html.ValidationMessageFor(model => model.Authorizer)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.AuthorizationID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AuthorizationID)
            @Html.ValidationMessageFor(model => model.AuthorizationID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RegistrationDate)
        </div>
