@model ViewSparkProject.User

@{
    Layout = "~/Views/Shared/_FullScreen.cshtml";
    ViewBag.Title = "Edit";
}

<h2>Edit User</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
